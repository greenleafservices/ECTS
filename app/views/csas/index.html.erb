<p id="notice"><%= notice %></p>

<div>
  <h2>CSA Information</h2>
  <%= link_to 'New Csa', new_csa_path %>
  <div class="equip-card">
    <div class="equip-card-block">
      <div class = "row equip-row">
        <div class="col-md-1">ID</div>
        <div class="col-md-1">Cust_id</div>
        <div class="col-md-1">CSA_Old</div>
        <div class="col-md-1">Equip_id</div>
        <div class="col-md-1">Start Date</div>
        <div class="col-md-1">End Date</div>
        <div class="col-md-1">Term</div>
        <div class="col-md-2">Equip Desc</div>
        <div class="col-md-1">Perks</div>  
        <div class="col-md-1">Actions</div>
      </div>
    </div>
  </div>
  
  <% @csas.each do |csa| %>
    <div class="equip-card">
      <div class="equip-card-block">
        <div class = "row equip-row">
          <div class="col-md-1"><%= csa.id %></div>
          <div class="col-md-1"><%= csa.cust_id %></div>
          <div class="col-md-1"><%= csa.csa %></div>
          <div class="col-md-1"><%= csa.equip_id %></div>
          <div class="col-md-1"><%= csa.start_date %></div>
          <div class="col-md-1"><%= csa.end_date %></div>
          <div class="col-md-1"><%= csa.term %></div>
          <div class="col-md-2"><%= csa.equip_desc %></div>
          <div class="col-md-1"><%= csa.total_perks %></div> 
          <div><%= link_to 'Show', csa %></div> 
          <div><%= link_to 'Edit', edit_csa_path(csa) %></div> 
          <div><%= link_to 'Destroy', csa, method: :delete, data: { confirm: 'Are you sure?' } %></div> 
        </div>
      </div>
    </div>
  <% end %>
  
</div>


<br>

